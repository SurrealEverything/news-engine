@model news_engine.Models.Comment

<div class="container panel panel-default">
    <div class="col-md-10">
        <div>
            <div class="panel-body text-right"><i class="glyphicon glyphicon-user"></i> @Model.User.UserName <br /></div>
            <div panel-body text-right>@Model.Message <br /></div>
            <div><i class="glyphicon glyphicon-calendar"></i> @Model.Date.ToShortDateString()</div>
            @Html.ActionLink("Edit", "Edit", "Comments", new { id = Model.CommentId }, null)
            @Html.ActionLink("Delete", "Delete", "Comments", new { id = Model.CommentId }, null)
        </div>
    </div>
</div>




