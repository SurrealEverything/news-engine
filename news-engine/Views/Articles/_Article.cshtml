@model news_engine.Models.Article

<div class="container panel panel-default">
    <div class="col-md-2"><img class="img-responsive img-thumbnail" src="~/App_Files/Images/@Model.ThumbnailUrl" /></div>
    <div class="col-md-10">

            <div class="panel-heading text-capitalize">@Html.ActionLink(Model.Title, "Details", "Articles", new { id = Model.ArticleId }, null )</div>
            @if (Model.RedirectLink != null)
            {
            <div class="panel-body text-right">
                <i class="glyphicon glyphicon-info-sign"></i>EXTERNAL<br />
                <i class="glyphicon glyphicon-user"></i> @Model.User.UserName <br />
                <i class="glyphicon glyphicon-calendar"></i> @Model.Date.ToShortDateString()
            </div>
            }
            else
            {
                <div class="panel-body text-right">
                    <i class="glyphicon glyphicon-user"></i> @Model.User.UserName <br />
                    <i class="glyphicon glyphicon-calendar"></i> @Model.Date.ToShortDateString()
                </div>
                
            }
            <div class="panel-footer"><i class="glyphicon glyphicon-tags"></i><em> @Html.ActionLink(Model.Category.Name, "Details", "Categories", new { id = Model.CategoryId }, null ) </em></div>
        </div>

</div>



