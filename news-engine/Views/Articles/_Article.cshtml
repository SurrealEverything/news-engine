@model news_engine.Models.Article

<div class="container panel panel-default">
    <div class="col-md-2"><img class="img-responsive img-thumbnail" src="~/App_Files/Images/@Model.ThumbnailUrl" /></div>
    <div class="col-md-10">
        <div>
            <div class="panel-heading text-capitalize">@Html.ActionLink(Model.Title, "Details", new { id = Model.ArticleId })</div>
            @if (Model.RedirectLink != null)
            {
                <text><div class="panel-body text-right"><i class="glyphicon glyphicon-info-sign"></i> EXTERNAL <br /></text>
            }
            <div class="panel-body text-right"><i class="glyphicon glyphicon-user"></i> @Model.User.UserName <br /> 
            <i class="glyphicon glyphicon-calendar"></i> @Model.Date.ToShortDateString()</div>
            <div class="panel-footer"><em>Categories go here...</em></div>
        </div>
    </div>
</div>



