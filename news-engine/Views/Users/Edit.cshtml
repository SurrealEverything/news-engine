@model news_engine.Models.ApplicationUser
@{
    ViewBag.Title = "Edit user data";
}
<ol class="breadcrumb">
    <li><h3>@ViewBag.Title</h3></li>
</ol>
<form method="post" action="/Users/Edit/@Model.Id">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.HiddenFor(m => m.Id)
    <br />
    <i class="glyphicon glyphicon-user"></i>
    @Html.Label("UserName", "User name", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.UserName)
    <br /><br />
    <i class="glyphicon glyphicon-envelope"></i>
    @Html.Label("Email", "User email", new { @class = "" })
    <br />
    @Html.EditorFor(m => m.Email)
    <br /><br />
    <i class="glyphicon glyphicon-th-list"></i>
    <label>Select user role</label>
    @Html.DropDownList("newRole", new SelectList(Model.AllRoles, "Value",
   "Text", (string)ViewBag.userRole), null , new { @class = "form-control" })
    <br />
    <button class="btn btn-success" type="submit">
        Save user data
    </button>
</form>